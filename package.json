{
  "name": "gnome-magic",
  "displayName": "Gnome Magic",
  "description": "A extension that add various features to vscode to help building gnome apps",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "workspaceContains:**/*.gresource.xml"
  ],
  "contributes": {
    "configuration": {
      "title": "Gnome Magic",
      "properties": {
        "gnome-magic.indexResources": {
          "type": "boolean",
          "default": true
        },
        "gnome-magic.useWorkspaceBlueprintLsp": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "languages": [
      {
        "id": "blueprint-gtk",
        "aliases": [
          "Blueprint",
          "blp"
        ],
        "extensions": [
          ".blp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "blueprint-gtk",
        "scopeName": "source.blueprint-gtk",
        "path": "./syntaxes/blueprint.tmGrammar.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@daiyam/balanced-pairs": "^0.1.1",
    "@types/js-beautify": "^1.13.3",
    "fast-xml-parser": "^4.1.2",
    "js-beautify": "^1.14.7",
    "vscode-languageclient": "^8.0.1"
  }
}
